{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "outDir": "dist",
    "types": ["node", "@vercel/node"]
  },
  "include": ["api/**/*.ts", "lib/**/*.ts"],
  "exclude": ["node_modules"]
}